// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  idusuario Int    @id @unique @default(autoincrement())
  nombre    String
  correo    String
  clave     String
}

model salones {
  idsalon               Int                     @id @unique @default(autoincrement())
  nombre_salon          String
}

model dispositivosdomoticos {
  iddispositivo      Int     @id @unique @default(autoincrement())
  nombre_dispositivo String
  estado             Boolean
  idsalon            salones @relation(fields: [salonesIdsalon], references: [idsalon])
  salonesIdsalon     Int
}
